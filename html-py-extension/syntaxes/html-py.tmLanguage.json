{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.html-py.injection",
  "injectionSelector": "L:source.python",
  "patterns": [
    {
      "include": "#html-triple-double"
    },
    {
      "include": "#html-triple-single"
    }
  ],
  "repository": {
    "html-triple-double": {
      "begin": "(\\b(?:html|div|section|template)\\s*[:=]\\s*|\\b\\w*(?:_html|\\s*:\\s*html)\\s*=\\s*)(?:[rRfFbBuUtT]{0,2})(\"\"\")",
      "beginCaptures": {
        "1": {
          "name": "source.python"
        },
        "2": {
          "name": "punctuation.definition.string.begin.python"
        }
      },
      "end": "(\"\"\")",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.python"
        }
      },
      "contentName": "meta.embedded.block.html",
      "patterns": [
        {
          "include": "text.html.basic"
        }
      ]
    },
    "html-triple-single": {
      "begin": "(\\b(?:html|div|section|template)\\s*[:=]\\s*|\\b\\w*(?:_html|\\s*:\\s*html)\\s*=\\s*)(?:[rRfFbBuUtT]{0,2})(''')",
      "beginCaptures": {
        "1": {
          "name": "source.python"
        },
        "2": {
          "name": "punctuation.definition.string.begin.python"
        }
      },
      "end": "(''')",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.string.end.python"
        }
      },
      "contentName": "meta.embedded.block.html",
      "patterns": [
        {
          "include": "text.html.basic"
        }
      ]
    }
  }
}